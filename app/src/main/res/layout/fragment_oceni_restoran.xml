<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OceniRestoranFragment">


    <TextView
        android:id="@+id/textViewNazivRestorana"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="72dp"
        android:text="Naziv: "
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/textViewOcenjenIliNe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="59dp" />

    <EditText
        android:id="@+id/editTextOcena"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:layout_marginBottom="104dp"
        android:ems="10"
        android:hint="Unesite ocenu za restoran"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonOceni"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp" />

    <Button
        android:id="@+id/buttonOceni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="124dp"
        android:text="Oceni"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="152dp" />

    <TextView
        android:id="@+id/textViewOcenjenIliNe"
        android:layout_width="254dp"
        android:layout_height="40dp"
        android:layout_marginBottom="104dp"
        android:text=""
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/editTextOcena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.286"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
