<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OceniRestoranFragment">


    <TextView
        android:id="@+id/textViewNazivRestorana"
        android:layout_width="123dp"
        android:layout_height="52dp"
        android:text="Naziv: "
        app:layout_constraintBottom_toTopOf="@+id/editTextOcena"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="165dp" />

    <EditText
        android:id="@+id/editTextOcena"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:layout_marginBottom="83dp"
        android:ems="10"
        android:hint="Unesite ocenu za restoran"
        app:layout_constraintBottom_toTopOf="@+id/buttonOceni"
        app:layout_constraintTop_toBottomOf="@+id/textViewNazivRestorana"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="62dp" />

    <Button
        android:id="@+id/buttonOceni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="144dp"
        android:text="Oceni"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="165dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
